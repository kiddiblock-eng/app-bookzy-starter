@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --bg: #ffffff;
  --fg: #111827;
}

.dark {
  --bg: #0a0a0a;
  --fg: #e5e7eb;
}

html, body {
  height: 100%;
  font-family: 'Poppins', sans-serif;
}

body {
  background: var(--bg);
  color: var(--fg);
}

.container-limit {
  max-width: 80rem;
  margin: 0 auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

.card {
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.08);
  border-radius: 1rem;
  transition: all 0.3s ease;
}

.btn-primary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  background: #2563eb;
  color: #fff;
  font-weight: 600;
  padding: 0.6rem 1.2rem;
  border-radius: 0.75rem;
  transition: background 0.2s ease;
}

.btn-primary:hover {
  background: #1d4ed8;
}

.badge {
  display: inline-block;
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  background: #dbeafe;
  color: #1d4ed8;
}

@media (prefers-color-scheme: dark) {
  .card {
    background: rgba(23, 23, 23, 0.6);
    border-color: #27272a;
  }
}@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
@keyframes scaleIn {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}
.animate-fadeIn { animation: fadeIn 0.3s ease-out; }
.animate-scaleIn { animation: scaleIn 0.4s ease-out; }

